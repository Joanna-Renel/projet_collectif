{% extends 'base.html.twig' %}

{% block body %}

    {% if (message in app.flashes('inscription')) %}

        <div class="col-md-6 mt-4 mx-auto bg-light rounded text-center p-2">
            {{ message }}
        </div>

    {% endif %}

  <h1 class="display-4 text-center my-4">S'inscrire</h1>


    {{ form_start(formInscription, {'attr': {'class': 'col-md-7 mx-auto'}}) }}

      {{ form_row(formInscription.prenom, {'label': 'Prénom', 'attr': {'placeholder': "Prénom"}}) }}

      {{ form_row(formInscription.nom, {'label': 'Nom', 'attr': {'placeholder': "Nom"}}) }}

      {{ form_row(formInscription.username, {'label': 'Identifiant', 'attr': {'placeholder': "Identifiant"}}) }}

      {{ form_row(formInscription.adresse, {'label': 'Adresse', 'attr': {'placeholder': "Adresse"}}) }}

      {{ form_row(formInscription.email, {'label': 'Email', 'attr': {'placeholder': "Email"}}) }}

      {{ form_row(formInscription.password, {'label': 'Mot de passe', 'attr': {'placeholder': "Mot de passe"}}) }}

      {{ form_row(formInscription.confirm_password, {'label': 'Confirmez votre mot de passe'}) }}


          {# Remplacer la couleur du bouton #}
          <button type="submit" class="btn btn-info mb-5">S'inscrire</button>

      
    {{ form_end(formInscription) }}



{% endblock %}
