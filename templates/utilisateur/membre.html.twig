{% extends "utilisateur/index.html.twig" %}

{% form_theme formUser 'bootstrap_4_layout.html.twig' %}


{% block main %}

<h1 class="text-center"> Bienvenue dans votre espace, {{ utilisateur.prenom}} !</h1>

{% for notice in app.flashes('notice') %}
   
<div class="bg-success col-md-4 rounded mt-4 mb-2 mx-auto text-white text-center text-left p-2">
    {{ notice }}
</div>
{% endfor %}

{% for message in app.flashes('success') %}
    <div class="bg-info col-md-4 rounded mt-4 mb-2 mx-auto text-white text-center p-2">
        {{ message }}
    </div>
{% endfor %}
 
    <div class="col-md-7 mb-5">

        {{ form_start(formUser, {'attr':{'class':' mx-auto'}}) }}

            {{ form_row(formUser.username, {label:'Pseudo'}) }}
            
            {{ form_row(formUser.email, {'attr':{'class':'mx-auto'}}) }}
            
            <div class="form-group d-flex text-right">
                <button class=" btn-dark"><a href="{{ path('registration', {'id':utilisateur.id})}} ">Modifier mot de passe</a></button>
            </div>

            {{ form_row(formUser.prenom, {'attr':{'class':'mx-auto'}}) }}

            {{ form_row(formUser.nom, {'attr':{'class':'mx-auto'}}) }}            
            
            {{ form_row(formUser.adresse, {'attr':{'class':'mx-auto'}}) }}         

            <form class=" col-md-6 mx-auto text-right" action="" method="post"> 

                <button type="submit" class="btn btn-success">
                    Enregistrer les modifications
                </button>
            </form>
        {{ form_end(formUser) }}
         

    </div>

{% endblock %}